<!DOCTYPE html>
%html{"xmlns:fb" => "http://ogp.me/ns/fb#"}
  %head
    %title Fairlop Paddle Sport
    =stylesheet_link_tag :app
    =javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js'

    :javascript
      $(function(){
        $('ul#links li').on('click', function(e){
          var page = $(this).attr('id');
          $('.page').hide();
          $('.'+page).show();
          $('li').removeClass('active');
          $(this).addClass('active');
        });

        $('#like').delay(1000).fadeIn(500,function(){ $(this).css({'height':"inherit",'overflow':"inherit"}); });
      })
  %body
    #container
      =yield

